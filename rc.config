# SETTTINGS #########
hostname="{{@}}"
ifconfig_{{@}}="{{@}}"
defaultrouter="{{@}}"
#ifconfig_{{@}}="DHCP"
# KERN ###############
zfs_enable="YES"
kldload fuse
# PF #################
pf_enable="YES"
pf_rules="/etc/pf.conf"
pflog_enable="YES"
pflog_file="{{@}}"
# NFS ################
nfsv4_server_enable="YES"
nfsuserd_enable="YES"
# SERVICES ###########
jail_enable="YES"
vsftpd_enable="YES"
# sshd_enable="YES"
# OTHER ##############
keyrate="fast"
allscreeens_flags="MODE_{{@}}"
dumpdev="AUTO"
# NFS
rpcbind_enable="YES"
nfs_server_enable="YES"
mountd_enable="YES"
mountd_flags="YES"
